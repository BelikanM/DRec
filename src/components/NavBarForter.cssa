/* src/components/NavBarForter.css */
.nav-forter {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.nav-icon {
  text-decoration: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s ease;
}

.nav-icon:hover {
  transform: scale(1.1);
  color: #ffc107 !important;
}
